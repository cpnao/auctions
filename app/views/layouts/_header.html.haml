.row
  .col-sm-12
    .navbar.navbar-default
      .container-fluid
        .navbar-header
          = link_to 'Auctions', root_path, class: "navbar-brand"
        %ul.nav.navbar-nav.navbar-right
          - if user_signed_in?
            %li.dropdown
              = link_to '#', class: "dropdown-toggle", data: { toggle: "dropdown" }, role: "button", area: { haspopup: "true", expanded: "false" } do
                %span= current_user.name
                %span.caret
              %ul.dropdown-menu
                %li
                  = link_to edit_user_registration_path do
                    %i.glyphicon.glyphicon-user
                    %span プロファイルの編集
                %li.divider{ role: "separator" }
                %li
                  = link_to my_products_path do
                    %i.glyphicon.glyphicon-heart
                    %span マイページ
            %li= link_to 'ログアウト', destroy_user_session_path, method: :delete
          - else
            %li= link_to 'ログイン', new_user_session_path